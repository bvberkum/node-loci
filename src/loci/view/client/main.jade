extends ../layout/base


block main

  form.form-horizontal
    .form-group
      label.sr-only(for="backend") Backend
      .input-group
        .input-group-addon Pre
        input#backend(name="backend", placeholder=listname).form-control
        .input-group-addon Post

    .form-group
      label.sr-only(for="new-item") Backend
      .input-group
        input#new-item(name="new-item", placeholder="").form-control
        .input-group-addon Add
 
    // button.btn.btn-default(type="submit") Update


block content

  script(type="text/coffeescript")
    | $('input#backend').change (evt)->
    |    sio = io.connect()
    |    sio.emit 'use', $(evt.target).val()

  #collection


block epilogue

  div
    h3 Last Socket.IO talk
    #talk

